
#: import utils kivy.utils
<Label>
    font_size: 25
    size_hint_y: None
    height: 40

<TextInput>
    spacing: 20
    font_size: 19
    size_hint_y: None
    height: 40

<MyLayout>
    GridLayout:
        cols: 1
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 2

            Label:
                text: "Email"

            TextInput:
                id: 'email_input'
                multiline: False
                on_text: root.email_str = self.text

            Label:
                id: 'password'
                text: "Password"

            TextInput:
                multiline: False

        Label:
            id: update_label
            text: ''

        RoundedButton:
            text: "Submit"
            font_size: 32
            size_hint_y: .2
            on_press: root.submit()

<RoundedButton@Button>
    background_color: (0, 0, 0, .7)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#32a879')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
